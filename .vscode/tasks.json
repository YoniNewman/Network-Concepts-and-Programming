{
  "version": "2.0.0",
  "command": "gcc",
  "isShellCommand": true,
  "args": [
    "main.c",
    "ip_math_coding.c",
    "-g"
  ],
  "showOutput": "always",
  "problemMatchers": [
    "$gcc"
  ],
  "tasks": [
    {
      "type": "shell",
      "label": "gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      }
    }
  ]
}